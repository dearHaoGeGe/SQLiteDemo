<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.my.dbdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            style="@style/btn_style"
            android:text="批量插入数据(做事务)" />

        <Button
            android:id="@+id/btn2"
            style="@style/btn_style"
            android:text="更新一个实体" />

        <Button
            android:id="@+id/btn3"
            style="@style/btn_style"
            android:text="通过一个实体类更新指定字段" />

        <Button
            android:id="@+id/btn4"
            style="@style/btn_style"
            android:text="通过id进行字段修改" />

        <Button
            android:id="@+id/btn5"
            style="@style/btn_style"
            android:text="删除表中所有数据" />

        <Button
            android:id="@+id/btn6"
            style="@style/btn_style"
            android:text="通过id删除一行" />

        <Button
            android:id="@+id/btn7"
            style="@style/btn_style"
            android:text="通过entity删除一行" />

        <Button
            android:id="@+id/btn8"
            style="@style/btn_style"
            android:text="通过id查询一行" />

        <Button
            android:id="@+id/btn9"
            style="@style/btn_style"
            android:text="通过条件查询有多少条结果" />

    </LinearLayout>

</ScrollView>
